<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:dividerPadding="10dp"
    android:background="#E91E63"
    tools:context="com.rrsaikat.Myappgit.Createpost">




    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:pointerIcon="arrow">
        <EditText
            android:layout_marginVertical="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:paddingBottom="150dp"
            android:hint="@string/post_desription_in_sort"
            android:drawableLeft="@drawable/ic_title_black_24dp"
            android:id="@+id/post_desc"
            android:layout_marginTop="10dp"
            android:background="#ffffff"
            android:drawableStart="@drawable/ic_title_black_24dp"
            />

    </ScrollView>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="@string/post_title"
        android:maxLines="2"
        android:drawableLeft="@drawable/ic_title_black_24dp"
        android:id="@+id/post_title"
        android:layout_marginTop="10dp"
        android:background="#ffffff"
        android:drawableStart="@drawable/ic_title_black_24dp" />

    <Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Add image"

    android:onClick="upldimage"
    android:id="@+id/imagbutton"
    android:drawableLeft="@drawable/ic_add_a_photo_black_24dp"
    android:drawablePadding="10dp"
    android:drawableStart="@drawable/ic_add_a_photo_black_24dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:pointerIcon="arrow">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageview"
        tools:ignore="ContentDescription" />

    </ScrollView>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/update"
        android:id="@+id/updatebtton"
        android:onClick="update"
        android:textColor="#fafafa"
        android:background="@drawable/buttonstyle"
        android:layout_marginTop="20dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:id="@+id/logout"
            android:layout_weight="1"
            android:onClick="logout"
            android:textColor="#fafafa"
            android:background="@drawable/buttonstyle"
            android:layout_marginTop="20dp"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="see posts"
            android:id="@+id/getpostbt"
            android:onClick="seepost"

            android:layout_weight="1"
            android:textColor="#fafafa"
            android:background="@drawable/buttonstyle"
            android:layout_marginTop="20dp"
            />
    </LinearLayout>





</LinearLayout>
