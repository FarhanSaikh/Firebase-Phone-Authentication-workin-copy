<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="#19d46c"
    android:orientation="vertical"
    tools:context="com.rrsaikat.Myappgit.UserDetails">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Enter your details:"
    android:id="@+id/textff"
    android:layout_gravity="center_horizontal"
    android:textSize="20dp"
    android:layout_marginTop="20dp"/>


    <EditText
        android:drawableLeft="@drawable/ic_person_black_24dp"
        android:layout_width="match_parent"
        android:hint="Name"
        android:inputType="textPersonName"
        android:id="@+id/name1"
        android:drawablePadding="10dp"


        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        />
    <EditText
        android:drawableLeft="@drawable/ic_email_black_24dp"
        android:layout_width="match_parent"
        android:hint="Emal"
        android:drawablePadding="10dp"

        android:inputType="textEmailAddress"
        android:id="@+id/email1"

        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        />
    <EditText
        android:layout_width="match_parent"
        android:hint="Male/Female"

        android:inputType="textPersonName"
        android:id="@+id/sex1"
        android:drawableLeft="@drawable/ic_supervisor_account_black_24dp"
        android:drawablePadding="10dp"


        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        />
    <EditText
        android:layout_width="match_parent"
        android:hint="Address"
        android:inputType="textPostalAddress"
        android:id="@+id/address1"
        android:drawablePadding="10dp"

        android:drawableLeft="@drawable/ic_local_post_office_black_24dp"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        />
    <EditText
        android:layout_width="match_parent"
        android:hint="Password"
        android:inputType="textPassword"
        android:id="@+id/password1"

        android:drawableLeft="@drawable/ic_lock_black_24dp"
        android:drawablePadding="10dp"


        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="save"
        android:drawableLeft="@drawable/ic_save_black_24dp"
        android:id="@+id/save1"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="back to logout"
        android:id="@+id/logoutbttn"
        />

</LinearLayout>
