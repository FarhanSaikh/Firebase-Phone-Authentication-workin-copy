<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#6f3c84d1"
    android:layout_height="wrap_content"
    android:padding="5dp"
    tools:context="com.rrsaikat.Myappgit.PostList">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
         android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="3dp"
        android:layout_height="400dp">
           <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
               android:id="@+id/maincontent"
              >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/postimage"
                android:scaleType="fitXY"

                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@id/postimage"
                android:id="@+id/posttitle"
                android:textSize="20sp"
                android:maxLines="1"
                android:textColor="#0a0909"
                android:textStyle="bold"
                android:elevation="4dp"
                android:text="@string/titleof"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:maxLines="2"
                android:elevation="4dp"

                android:id="@+id/postdescription"
                android:text="Description is here"
                android:layout_below="@id/posttitle"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#fafafa"
            android:id="@+id/sociallayout"
        android:weightSum="3"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:text="Like"
            android:drawableLeft="@drawable/ic_thumb_up_black_24dp"
            android:layout_height="wrap_content"
            android:id="@+id/likebtton"
            android:layout_weight="1"
            android:drawableStart="@drawable/ic_thumb_up_black_24dp" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/commentbutton"
            android:text="Comment"
            android:drawableLeft="@drawable/ic_message_black_24dp"
            android:layout_weight="1"
            android:drawableStart="@drawable/ic_message_black_24dp" />
        <Button
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:text="Share"
            android:drawableLeft="@drawable/ic_share_black_24dp"
            android:layout_height="wrap_content"
            android:id="@+id/sharebutton"
            android:drawableStart="@drawable/ic_share_black_24dp" />






    </LinearLayout>


    </android.support.v7.widget.CardView>




</LinearLayout>
